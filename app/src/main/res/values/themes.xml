<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TreataChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="very_small_text">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
    <style name="small_text">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
    <style name="medium_text">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
    <style name="large_text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
    <style name="very_large_text">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
    <style name="collapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
    <style name="expandedTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/vazir_black</item>
        <item name="android:fontFamily">@font/vazir_black</item>
    </style>
</resources>